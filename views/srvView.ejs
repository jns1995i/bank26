<% layout('layout') %>
<style>
    .info p i {
        width: 20px !important;
        display: inline;
        margin-right: 5px;
    }
    .info p {
        display: flex !important;
        justify-content: center;
        align-items: center;
    }
</style>

 <section class="gap10 alignStart padding5" id="">
    <% const routes = { srv: "/srv",prc: "/prc",rel: "/rel",apr: "/apr",vrf: "/vrf", dsb: "/dsb", srvAll: "/srvAll"};
    const href = routes[back] || "/srv"; %>
    <a href="<%= href %>" class="nav cnav marginTop5 porcelain"><i class="fas fa-chevron-left"></i></a>

        <section class="col width65 padding5">
            <section class="justifyBetween padding0 hidden">
                <a href="<%= href %>" class="nav"><i class="fas fa-chevron-left"></i> Go Back</a>
                <p class="size20 str400">Request Details</p>
            </section>
            
            <section class="corner15 bgWhite col gap10 shadow1">
                <%- include('partials/srvCard') %>
                
                <section class="col padding15 corner15 bgSoft gap10">
                    <% if (request.items && request.items.length > 0) { %>
                        <% request.items.forEach(item => { %>
                            <section class="gap10 alignStart justifyStart
                            <% if ( item.status === "Approved") { %>
                            bgWhite shadow1
                            <% } else { %>
                            porcelain 
                            <% } %>
                            corner15 padding15 relative">
                                <section class="padding0 alignStart col paddingLeft80">
                                    <a href="" class="nav cnavLG absolute left20 disabled glass colorPrimary">
                                        <i class="fas fa-file size35"></i>
                                    </a>
                                    <div class="w50 h50 absolute left20 hidden">
                                        <i class="fas fa-file size35"></i>
                                    </div>
                                    <p class="rem14 str500 flex alignCenter">
                                        <%= item.qty %> <%= item.type %>
                                        <% if (item.paper) { %>
                                            <span class="marginLeft5 bgBlue100 corner5 border0 width0 height0 inline"><i class="fas fa-print"></i> &nbsp; <%= item.paper %></span>
                                        <% } %>
                                    </p>
                                    <% if (item.semester) { %>
                                    <p class="size14">
                                        Semester & School Year: 
                                        <span class="colorPrimary rem12 str500">
                                            <%= item.semester + ` Sem` %> <%= `â€¢ ` + item.schoolYear %>
                                        </span>
                                    </p>
                                    <% } %>
                                    <p class="size14">Purpose: <span class="sizeInherit str500 colorPrimary"><%= item.purpose %></span></p>
                                    <p class="size14">
                                        <% if ( item.proof ) { %>
                                            <a href="<%= item.proof %>"  target="_blank" class="navy width0 height0"><i class="fas fa-eye w15"></i> View Uploaded School Request</a>
                                        <% } %>
                                    </p>
                                    <% if ( item.status === "Declined") { %>
                                        <a href="" class="disabled nav cnavLG absolute translateY right10 bgRed100 hidden"><i class="fas fa-xmark-circle"></i></a>
                                    <% } else if ( item.status === "Approved") { %>
                                        <a href="" class="disabled nav cnavLG absolute translateY right10 bgGreen100 hidden"><i class="fas fa-check-circle"></i></a>
                                    <% } else { %>
                                        <section class="padding10 gap5 width0 corner10 absolute right10 top5">
                                            <form action="/decItem" method="POST" class="form2">
                                                <input type="hidden" name="requestId" value="<%= request._id %>">
                                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                                <input type="hidden" name="back" value="<%= back %>">
                                                <button type="submit" class="nav corner10 borderPrimary"><i class="fas fa-xmark-circle"></i> Decline</button>
                                            </form>
                                            <form action="/appItem" method="POST" class="form2">
                                                <input type="hidden" name="requestId" value="<%= request._id %>">
                                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                                <input type="hidden" name="back" value="<%= back %>">
                                                <button type="submit" class="nav corner10 pnav"><i class="fas fa-check-circle"></i> Approve</button>
                                            </form>
                                        </section>
                                    <% } %>
                                    <% if ( item.free !== true ) { %>
                                        <section class="paddingTop5 padding0 gap5 width0 corner10">
                                            <form action="/freebie" method="POST" class="form2 width100">
                                                <input type="hidden" name="requestId" value="<%= request._id %>">
                                                <input type="hidden" name="itemId" value="<%= item._id %>">
                                                <input type="hidden" name="back" value="<%= back %>">
                                                <button type="submit" class="nav corner10 borderPrimary width100"><i class="fas fa-coins marginRight5"></i> Set as Free</button>
                                            </form>
                                        </section>
                                    <% } else { %>
                                        <p class="bgGreen100 border0 size12">Free of Charge</p>
                                    <% } %>
                                </section>
                            </section>
                        <% }); %>
                    <% } else { %>
                        <p>No items found for this request.</p>
                    <% } %>
                </section>
            </section>
        </section>
        
        <section class="col alignStart width35 padding5 justifyStart corner15 gap10">
            <%- include('partials/status') %>     
            <%- include('partials/notes') %>
            <% const hasPending = request.items && request.items.some(it => it.status === "Pending"); %>
            <% if (hasPending) { %>
                <section class="gap10 justifyBetween corner15 shadow1 bgWhite hidden">
                    <p class="rem14 str500">Quick Action <i class="fas fa-arrow-right"></i></p>
                </section>
            <% } %>

            <% if (hasPending) { %>
                <section class="gap10 justifyBetween corner15 col bgWhite padding20 shadow1">
                    <p class="rem14 str500">Quick Action</p>
                    <section class="padding0 gap10">
                        <form action="/decline3" method="POST" class="form2 width100 hidden">
                            <input type="hidden" name="requestId" value="<%= request._id %>">
                            <input type="hidden" name="back" value="<%= back %>">
                            <button type="submit" class="nav dnav-fill corner10 width100"><i class="fas fa-xmark-circle"></i> Decline Request</button>
                        </form>
                        <% if ( !request.holdAt) { %>
                        <form action="/hold3" method="POST" class="form2 width100">
                            <input type="hidden" name="requestId" value="<%= request._id %>">
                            <input type="hidden" name="back" value="<%= back %>">
                            <button type="submit" class="nav borderPrimary corner10 width100"><i class="fas fa-clock"></i> Hold Request</button>
                        </form>
                        <% } else { %>
                        <% } %>
                        <form action="/appAllItem" method="POST" class="form2 width100">
                            <input type="hidden" name="requestId" value="<%= request._id %>">
                            <input type="hidden" name="back" value="<%= back %>">
                            <button type="submit" class="nav corner10 pnav width100"><i class="fas fa-check-circle marginRight5"></i> Approve Request</button>
                        </form>
                    </section>
                </section>
            <% } %>

            <% if (['Admin', 'Head', 'Dev'].includes(user.role)) { %>
                <% if ( request.declineAt) { %>
                    <br>
                    <section class="gap10 justifyBetween corner15 bgWhite padding20 shadow1">
                        <section class="col gap0 padding0 width70 alignStart">
                            <p class="size12 str500 textCenter">Something went wrong with</p>
                            <p class="size12 str500 textCenter">the last action?</p>
                        </section>
                        <section class="padding0 gap10 width30">
                            <form action="/restore3" method="POST" class="form2 width100">
                                <input type="hidden" name="requestId" value="<%= request._id %>">
                                <input type="hidden" name="back" value="<%= back %>">
                                <button type="submit" class="nav corner10 borderPrimary width100"><i class="fas fa-rotate"></i> Reset</button>
                            </form>
                        </section>
                    </section>
                <% } %>

                
                <% if ( request.status === "Reviewed") { %>
                    <br>
                    <section class="gap10 justifyBetween corner15 bgWhite padding20 shadow1">
                        <section class="col gap0 padding0 width70 alignStart">
                            <p class="size12 str500 textCenter">Something went wrong with</p>
                            <p class="size12 str500 textCenter">the last action?</p>
                        </section>
                        <section class="padding0 gap10 width30">
                            <form action="/restore3" method="POST" class="form2 width100">
                                <input type="hidden" name="requestId" value="<%= request._id %>">
                                <input type="hidden" name="back" value="<%= back %>">
                                <button type="submit" class="nav corner10 borderPrimary width100"><i class="fas fa-rotate"></i> Reset</button>
                            </form>
                        </section>
                    </section>
                <% } %>
            <% } %>
            
            <% if ( request.status === "Verified") { %>
            <section class="gap10 justifyBetween corner20 bgWhite shadow1 col padding20 claimX">
                <p class="size14 str400 textCenter textBalance">Update the request if the document is fully prepared and ready for release.</p>
                <form action="/fRel" method="POST" class="form2 marginTop5">
                    <input type="hidden" name="requestId" value="<%= request._id %>">
                    <input type="hidden" name="back" value="<%= back %>">
                    <button type="submit" class="nav pnav"><i class="fas fa-dolly"></i>Mark as Ready For Release</button>
                </form>
            </section>
            <% } %>

            <style>
                .claimX #successIcon {
                    border: 0.5px solid rgb(6, 6, 69) !important;
                    i.fa-thumbs-up {
                        color: rgb(8, 8, 92);
                    }
                }
            </style>
                        
            <% if ( request.status === "For Release") { %>
            <section class="gap10 justifyBetween corner20 bgWhite shadow1 col padding20 claimX">
                <p class="size14 str500 textCenter colorPrimary textBalance bgBlue100"><i class="fas fa-info-circle"></i> Update the status of the document once it was claimed</p>
                <form action="/claim3" method="POST" class="form2 width100">
                    <input type="hidden" name="requestId" value="<%= request._id %>">
                    <input type="hidden" name="back" value="<%= back %>">
                    <div class="field marginTop10">
                        <label for="">Name of Claimant</label>
                        <input type="text" name="claimedBy" placeholder="Enter Claimant's Name" required>
                    </div>
                    <br>
                    <button type="submit" class="nav corner10 pnav width100"><i class="fas fa-dolly"></i>Mark as Claimed</button>
                </form>
            </section>
            <% } %>



            <% if (['Admin', 'Head', 'Dev'].includes(user.role)) { %>
            <section class="col alignStart gap5">
                <% if ( request.processBy) { %>
                <section class="corner10 gap5 justifyStart width0 padding0">
                    <img src="<%= request.processBy?.photo || '/images/profile.png' %>" alt="Profile" onerror="this.onerror=null; this.src='/images/profile.png';" class="h20 w20 wMin20 borderPrimary corner500">
                    <p class="rem12 str500"> <%= request.processBy?.fName || "" %> <%= request.processBy?.lName || "" %></p>
                </section>
                <p class="rem1 str400 marginLeft5">Assigned at <%= request.assignAtFormatted %></p>
                <% } else { %>
                    <p class="red bgRed100"><i class="fas fa-exclamation-circle"></i> Unassigned</p>
                <% } %>
            </section>
            <% } %>
        </section>
    </section>

    
<div class="bgSoft absolute top0 left0 hidden" id="noticeCard">
    <section class="width35 padding30 corner20 bgWhite shadow1 col">
        <%- include('icons/warning') %>
            <p class="size30 str500" id="title"></p>
            <section class="col textCenter">
                <p class="rem1 textBalance" id="noticeMsg">Message here</p>
            </section>
            <div class="selectBar width100 widthMax100 marginBottom15" id="SelectDiv" style="display: none;">
                <select name="" id="selectFlex">
                    <option value="" selected disabled>Select Reason</option>
                </select>
            </div>
            <div class="width100 widthMax100 marginBottom15" id="InputDiv" style="display: none;">
                <textarea name="" id="inputFlex"></textarea>
            </div>
            <div class="width100 widthMax100 marginBottom15" id="InputDiv2" style="display: none;">
                <textarea name="" id="inputFlex2"></textarea>
            </div>
            <div class="field marginBottom15 porcelain" id="paperDiv" style="display: none;">
                <% if (request.items && request.items.length > 0) { %>
                        <% request.items.forEach(item => { %>
                            <div class="row justifyBetween" data-item-type="<%= item.type %>"></div>
                        <% }); %>
                <% } else { %>
                    <p>No items found for this request.</p>
                <% } %>
            </div>
            <section class="bgBlue100 col padding15 textCenter">
                <p class="rem12">This action cannot be undone!</p>
            </section>
            <br>
            <div class="section gap10">
                <a href="javascript:vod(0)" class="nav width100"  id="closeNoticeCard"> Go Back</a>
                <a href="javascript:vod(0)" class="nav pnav width100" id="proceedBtn"> Proceed</a>
            </div>
    </section>
</div>

<script>
document.addEventListener("DOMContentLoaded", () => {
    const noticeCard = document.getElementById("noticeCard");
    const noticeMsg = document.getElementById("noticeMsg");
    const title = document.getElementById("title");
    const proceedBtn = document.getElementById("proceedBtn");
    const closeNoticeCard = document.getElementById("closeNoticeCard");
    const selectDiv = document.getElementById("SelectDiv");
    const selectFlex = document.getElementById("selectFlex");
    const inputDiv = document.getElementById("InputDiv");
    const inputFlex = document.getElementById("inputFlex");
    const inputDiv2 = document.getElementById("InputDiv2");
    const inputFlex2 = document.getElementById("inputFlex2");
    const paperDiv = document.getElementById("paperDiv");

    let currentForm = null;
    let currentAction = null;

    const reasonOptions = {
        hold: ["Incomplete", "Payment", "Illegible"],
        decline: ["Illegible"]
    };

    const actions = [
        { selector: 'form[action="/decItem"] button', message: "Are you sure you want to decline this requested document? Select your reason below", title: "WARNING", type: "item" },
        { selector: 'form[action="/appItem"] button', message: "You are about to approve this requested document", title: "WARNING", type: "item" },
        { selector: 'form[action="/freebie"] button', message: "You are about to set this requested document as free", title: "FREE OF CHARGE", type: "item" },
        { selector: 'form[action="/remarksItem"] button', message: "Are you sure you want to send this remarks?", title: "WARNING", type: "item" },
        { selector: 'form[action="/decline3"] button', message: "Are you sure you want to decline this whole transaction? Select your reason below", reason: "decline", title: "WARNING", type: "transaction" },
        { selector: 'form[action="/hold3"] button', message: "Are you sure you want to hold this whole transaction? Select your reason below", title: "HOLD?", type: "transaction" },
        { selector: 'form[action="/appAllItem"] button', message: "Are you sure you want to approve all the requested documents? It will be marked as Reviewed and will proceed to Accounting for Assessment", title: "WARNING", type: "transaction" },
        { selector: 'form[action="/fRel"] button', message: "Enter first the number of paper used per document!", title: "MARK AS FOR RELEASE?", type: "transaction" },
        { selector: 'form[action="/restore3"] button', message: "Are you sure you want to proceed? This will reset all the status of the whole transaction", title: "WARNING", type: "transaction" },
        { selector: 'form[action="/claim3"] button', message: "Are you sure you want to proceed? This will mark the transaction as claimed", title: "WARNING", type: "transaction" },
    ];

    function populateSelect(reasonType) {
        selectFlex.innerHTML = "";
        const defaultOption = new Option("Select Reason", "");
        defaultOption.disabled = true;
        defaultOption.selected = true;
        selectFlex.appendChild(defaultOption);

        reasonOptions[reasonType].forEach(opt => {
            selectFlex.appendChild(new Option(opt, opt));
        });

        selectFlex.required = true;
        selectDiv.style.display = "flex";
    }

    // Attach click listeners to all action buttons
    actions.forEach(action => {
        document.querySelectorAll(action.selector).forEach(btn => {
            btn.addEventListener("click", e => {
                e.preventDefault();
                currentForm = btn.closest("form");

                if (!currentForm.checkValidity()) {
                    currentForm.reportValidity();
                    return;
                }

                currentAction = action;
                noticeMsg.textContent = action.message;
                title.textContent = action.title;

                // Reset all inputs
                inputDiv.style.display = "none";
                inputFlex.required = false;
                inputFlex.value = "";

                inputDiv2.style.display = "none";
                inputFlex2.required = false;
                inputFlex2.value = "";

                paperDiv.style.display = "none";
                paperDiv.querySelectorAll("input[name='paperUsed[]']").forEach(i => i.remove());

                // Paper inputs for /fRel
                if (currentForm.action.includes("/fRel")) {
                    paperDiv.style.display = "flex";
                    paperDiv.querySelectorAll("[data-item-type]").forEach(div => {
                        const itemType = div.dataset.itemType;
                        div.innerHTML = `
                            <label class="width0">${itemType} :</label>
                            <input type="number" min="0" class="width30 paperInput" name="paperUsed[]" required>
                        `;
                    });
                }

                // Textarea for remarksItem
                if (currentForm.action.includes("/remarksItem")) {
                    inputDiv.style.display = "flex";
                    inputFlex.required = true;
                }

                // Textarea for hold3
                if (currentForm.action.includes("/hold3")) {
                    inputDiv2.style.display = "flex";
                    inputFlex2.required = true;
                }

                // Populate select if needed
                if (action.reason && reasonOptions[action.reason]) {
                    populateSelect(action.reason);
                } else {
                    selectDiv.style.display = "none";
                    selectFlex.required = false;
                }

                noticeCard.classList.remove("hidden");
            });
        });
    });

    closeNoticeCard.addEventListener("click", () => {
        noticeCard.classList.add("hidden");
        currentForm = null;
        currentAction = null;

        selectDiv.style.display = "none";
        selectFlex.required = false;
        selectFlex.value = "";

        inputDiv.style.display = "none";
        inputFlex.required = false;
        inputFlex.value = "";

        inputDiv2.style.display = "none";
        inputFlex2.required = false;
        inputFlex2.value = "";

        paperDiv.style.display = "none";
    });

    proceedBtn.addEventListener("click", () => {
        if (!currentForm) return;

        // Validate select
        if (selectDiv.style.display !== "none" && !selectFlex.checkValidity()) {
            selectFlex.reportValidity();
            return;
        }

        // Validate inputDiv
        if (inputDiv.style.display !== "none" && !inputFlex.checkValidity()) {
            inputFlex.reportValidity();
            return;
        }

        // Validate inputDiv2
        if (inputDiv2.style.display !== "none" && !inputFlex2.checkValidity()) {
            inputFlex2.reportValidity();
            return;
        }

        // Validate paperDiv
        if (paperDiv.style.display !== "none") {
            const paperInputs = paperDiv.querySelectorAll("input[name='paperUsed[]']");
            for (let input of paperInputs) {
                if (!input.checkValidity()) {
                    input.reportValidity();
                    return;
                }
            }
        }

        // Inject select reason
        if (selectDiv.style.display !== "none" && selectFlex.value) {
            let inputName = currentAction.type === "item" ? "itemRemarks" : "requestRemarks";
            let existing = currentForm.querySelector(`input[name="${inputName}"]`);
            if (existing) existing.remove();

            const hiddenInput = document.createElement("input");
            hiddenInput.type = "hidden";
            hiddenInput.name = inputName;
            hiddenInput.value = selectFlex.value;
            currentForm.appendChild(hiddenInput);
        }

        // Inject inputDiv remarks
        if (inputDiv.style.display !== "none") {
            let existing = currentForm.querySelector('input[name="itemRemarks"]');
            if (existing) existing.remove();

            const remarksInput = document.createElement("input");
            remarksInput.type = "hidden";
            remarksInput.name = "itemRemarks";
            remarksInput.value = inputFlex.value.trim();
            currentForm.appendChild(remarksInput);
        }

        // Inject inputDiv2 remarks (hold3)
        if (inputDiv2.style.display !== "none") {
            let existing = currentForm.querySelector('input[name="requestRemarks"]');
            if (existing) existing.remove();

            const remarksInput2 = document.createElement("input");
            remarksInput2.type = "hidden";
            remarksInput2.name = "requestRemarks";
            remarksInput2.value = inputFlex2.value.trim();
            currentForm.appendChild(remarksInput2);
        }

        // Inject paper counts
        if (paperDiv.style.display !== "none") {
            const paperInputs = paperDiv.querySelectorAll("input[name='paperUsed[]']");
            paperInputs.forEach(input => {
                const hidden = document.createElement("input");
                hidden.type = "hidden";
                hidden.name = "paperUsed[]";
                hidden.value = input.value.trim();
                currentForm.appendChild(hidden);
            });
        }

        currentForm.submit();
    });
});
</script>
